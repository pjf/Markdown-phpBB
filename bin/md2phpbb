#!/usr/bin/perl -w
use 5.010;
use strict;
use warnings;
use autodie;

# ABSTRACT: Turn markdown into phpBB code
# PODNAME: md2phpbb
# VERSION

use Markdent::Parser;
use Markdown::phpBB::Handler;

my $handler = Markdown::phpBB::Handler->new;

my $parser = Markdent::Parser->new(
    handler => $handler,
);

my $text = join('', <>);

$parser->parse(markdown => $text);
print $handler->result;
